{
  "manifest_version": 3,
  "name": "SelectCite",
  "description": "Select text and get BibTeX citations instantly! Right-click any selected text to search for academic references.",
  "version": "1.0",
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "128": "icons/icon128.png"
  },
  "permissions": [
    "activeTab",
    "contextMenus",
    "notifications"
  ],
  "host_permissions": [
    "https://scholar.google.com/*"
  ],
  "background": {
    "service_worker": "js/background.js"
  },
  "action": {
    "default_title": "SelectCite"
  }
}